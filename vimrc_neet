set tabstop=4
set shiftwidth=4
set expandtab
set sts=4
set smartindent
"map b :cn<CR>
"map c :cp<CR>
map <F2> :bn<CR>
map! <F2>  <ESC>:w<CR>:bn<CR>
map <F3> :nohlsearch<CR>
set nu
set encoding=utf-8
set fileencodings=utf-8,ucs-bom,cp936,gbk,gb2312
set fileencoding=utf-8
set termencoding=utf-8

set vb t_vb= 
set syntax=on
" syntax on

set softtabstop=4                                                                                                                                                                                                                           
set smarttab

set autoindent
set cindent

set showmatch
set hlsearch

set langmenu=zh_CN.UTF-8
set helplang=cn

set completeopt=menu " 关闭scratch 预览窗口 
set backspace=indent,eol,start
set so=3 " 光标在上下边界还有3行时就开始自动滚屏

set number

set cursorline

colorscheme desert
